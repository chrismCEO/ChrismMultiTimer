<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example"
            android:id="@+id/timer_name"
            android:textSize="24sp"
            android:textStyle="italic"
            android:paddingBottom="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:000"
            android:textSize="36sp"
            android:id="@+id/timer_clock"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_replay_black_48dp"
        android:padding="8dp"
        android:id="@+id/timer_replay"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:contentDescription="@string/replay_content_description" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_play_circle_outline_black_48dp"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/timer_play_pause"
        android:contentDescription="@string/start_pause_timer_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_info_outline_black_24dp"
            android:id="@+id/timer_info"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_edit_black_24dp"
            android:id="@+id/timer_edit"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_delete_black_24dp"
            android:id="@+id/timer_delete"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

</LinearLayout>